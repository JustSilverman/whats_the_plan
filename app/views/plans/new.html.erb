<h1 class="page-title">Select activities for your next plan</h1>
<form class="plan-create">
  <div class="activity-form">
      <input id="destination" class="input-field" name="destination" placeholder="Activity name (e.g. Coit Tower, mexican food)"
             type="text" />
      <input id="address" class="input-field" name="address" placeholder="Location (e.g. SF, Paris, Berlin)" type="text"/>
    
    <div class='activity-options'>
      <input id="meal" name="meal" type="checkbox" />Is this a meal?
      <input class="btn btn-primary add-activity" name="commit" type="submit" value="Search for activities" />
    </div>
  </div>

  <div class="plan-builder">
    <div class="new-plan">
      <h3>My Plan's Activities</h3>
      <div class="plan-creation">
        <input id="title" class="plan-title-field" name="title" placeholder="Plan title (e.g. My day in Paris)" type="text"/>
        <input class="btn btn-primary create-plan disabled" name="commit" type="submit" value="Create my plan!" />
      </div>
    </div>

    <div class="search-results">
      <h3>Search Results</h3>
    </div>
  </div>
</form>

